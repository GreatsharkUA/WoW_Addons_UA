	<Frame name="BASpammerSettingBackgroundTemplate" virtual="true">
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Scripts>
			<OnLoad>
				self:SetBackdropBorderColor(TOOLTIP_DEFAULT_COLOR.r, TOOLTIP_DEFAULT_COLOR.g, TOOLTIP_DEFAULT_COLOR.b);
				self:SetBackdropColor(TOOLTIP_DEFAULT_BACKGROUND_COLOR.r, TOOLTIP_DEFAULT_BACKGROUND_COLOR.g, TOOLTIP_DEFAULT_BACKGROUND_COLOR.b);
			</OnLoad>
		</Scripts>
	</Frame>	
	<Frame name="BASpammer" toplevel="true" enableMouse="true" movable="true" parent="UIParent" hidden="false">
		<Size>
			<AbsDimension x="150" y="20"/>
		</Size>
		<Anchors>
			<Anchor point="CENTER" relativeTo="UIParent">
				<Offset>
					<AbsDimension x="0" y="0" />
				</Offset>
			</Anchor>
 		</Anchors>			
		<Layers>
			<Layer>
				<FontString name="BASpammerText"  inherits="GameFontHighlight" text="Spammer OFF">
					<Size x="140" y="16"/>
					<Anchors> 
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="-1" />
							</Offset>
						</Anchor>
					</Anchors>
					<FontString inherits="GameFontHighlight"/>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnUpdate>
				BASpammer:OnUpdate()
			</OnUpdate>		
			<OnMouseUp>
				if ( self.isMoving ) then
				  self:StopMovingOrSizing();
				  self.isMoving = false;
				  BASpammer:SavePosition(1)
				end	
			</OnMouseUp>
			<OnMouseDown>
				if ( ( ( not self.isLocked ) or ( self.isLocked == 0 ) ) and ( arg1 == "LeftButton" ) ) then
				  self:StartMoving();
				  self.isMoving = true;
				end
				BASpammer:OnMouseDown(self,arg1)
			</OnMouseDown>
			<OnEnter>
				BASpammer:OnEnter()
			</OnEnter>
			<OnLeave>
				BASpammer:OnLeave()
			</OnLeave>
		</Scripts>
	</Frame>
